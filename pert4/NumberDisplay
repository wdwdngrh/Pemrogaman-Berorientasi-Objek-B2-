// class merepresentasikan angka yang punya batas tertentu
public class NumberDisplay
{
    private int limit; // batas atas angkanya untuk selanjutnya diatur jika mencapai limit akan kembali ke nol
    private int value; // angka saat itu yang akan ditampilkan 
    
    // konstruktor kelas dengan inputan limit dan inisialisasi value nol
    public NumberDisplay(int rollOverLimit)
    {
        limit = rollOverLimit;
        value = 0;
    }

    // mengambil nilainya
    public int getValue()
    {
        return value;
    }
    
    // menampilkan string dari nilainya jika hanya satuan tampikan angka nol di depan satuan
    public String getDisplayValue()
    {
        if (value < 10){
            return "0" + value;
        }
        else {
            return "" + value;
        }
    }
    
    // mengatur nilai selama dalam jangkauan limitnya dan tidak negatif
    public void setValue(int replacementValue)
    {
        if ((replacementValue >= 0) && (replacementValue < limit)){
            value = replacementValue;
        }
    }
    
    // menambah nilai dengan kembali ke nol jika mencapai batas
    public void increment(){
        value = (value + 1) % limit;
    }
}
